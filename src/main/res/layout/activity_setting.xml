<?xml version="1.0" encoding="utf-8"?>
<com.onlylady.beautyapp.views.RippleView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <RelativeLayout
        android:id="@+id/settingtitle"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/dedede">
        <ImageView
            android:id="@+id/setting_goback"
            android:layout_width="36dp"
            android:layout_height="42dp"
            android:src="@drawable/selector_feedback_back"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setting"
            android:textSize="17sp"
            android:textColor="@color/colorff3064"
            android:layout_centerInParent="true"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_clean"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/settingtitle">

        <ImageView
            android:id="@+id/cleanicon"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:src="@mipmap/clean_memory"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/clean_memory"
            android:textSize="13sp"
            android:textColor="@color/home_text"
            android:layout_toRightOf="@id/cleanicon"
            android:layout_marginLeft="7.5dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/cache_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3.3M"
            android:textSize="13sp"
            android:textColor="@color/home_text"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dp"
            android:layout_centerVertical="true"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/dedede"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/logout_btn"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_below="@+id/rl_clean"
        android:background="@mipmap/loginbtn"
        android:layout_centerHorizontal="true"
        android:text="退出登录"
        android:gravity="center"
        android:textSize="17sp"
        android:textColor="#ff3064"
        android:layout_marginTop="154dp"/>
    <TextView
        android:id="@+id/version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="版本V_1.0.0"
        android:textSize="13sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/logout_btn"
        android:layout_marginTop="176dp"
        />
</com.onlylady.beautyapp.views.RippleView>
