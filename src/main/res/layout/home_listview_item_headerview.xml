<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:id="@+id/liubai"
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="@color/dedede" />

    <RelativeLayout
        android:id="@+id/layout_timeriqi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="35dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_centerVertical="true"
            android:background="@color/dedede"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@+id/time_riqi" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="6dp"
            android:background="@color/dedede"
            android:layout_toLeftOf="@+id/time_riqi" />

        <TextView
            android:id="@+id/time_riqi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="2015"
            android:textColor="@color/home_text"
            android:textSize="12sp" />

    </RelativeLayout>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="54dp">

        <TextView
            android:id="@+id/liveorpasstext"
            style="@style/text01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="今日直播" />

        <ImageView
            android:id="@+id/beauty_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:src="@mipmap/beauty_more" />

    </RelativeLayout>

</LinearLayout>