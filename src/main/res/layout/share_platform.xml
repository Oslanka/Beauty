<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingBottom="55dp"
    android:paddingTop="55dp">

    <LinearLayout
        android:id="@+id/toplayout"
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:orientation="horizontal"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">


        <ImageView
            android:id="@+id/shareweibo"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@mipmap/shareweibo" />

        <ImageView
            android:id="@+id/sharepengyouquan"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@mipmap/sharepengyouquan" />

        <ImageView
            android:id="@+id/shareweixin"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@mipmap/shareweixin" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:layout_marginTop="35dp"
        android:orientation="horizontal"
        android:paddingLeft="80dp"
        android:paddingRight="80dp">

        <ImageView
            android:id="@+id/shareqq"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@mipmap/shareqq" />

        <ImageView
            android:id="@+id/shareqqz"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@mipmap/shareqqz" />


    </LinearLayout>


</LinearLayout>
