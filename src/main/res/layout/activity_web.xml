<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/banner_750_1334">


    <ProgressBar
        android:id="@+id/my_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:max="100"
        android:progress="0"
        android:progressDrawable="@drawable/progressbar_color" />


    <FrameLayout
        android:id="@+id/fragmentcontainner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/my_progress"
        android:background="@color/black"
        android:orientation="horizontal"
        android:visibility="gone" />


    <FrameLayout
        android:id="@+id/framelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <FrameLayout
        android:id="@+id/commentcontainner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/fragmentcontainner" />


    <ImageView
        android:id="@+id/detailgoback"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:src="@mipmap/detailgoback" />

    <ImageView
        android:id="@+id/dobleclick"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:visibility="gone" />


</RelativeLayout>